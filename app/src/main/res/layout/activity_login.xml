<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:background="@color/ghostwhite" >

        <include
            android:id="@+id/login_toolbar"
            layout="@layout/include_toolbar" />

        <include layout="@layout/include_toolbar_divider" />

        <ImageView
            android:id="@+id/login_background_imageView"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="centerCrop"
            />

        <cn.keziqin.studychinese.view.ClearEditText
            android:id="@+id/login_username_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/keyline_1"
            android:layout_marginRight="@dimen/keyline_1"
            android:layout_marginTop="40dp"
            android:background="@drawable/background_round_edittext"
            android:hint="@string/login_username_hint"
            android:padding="@dimen/keyline_1"
            android:singleLine="true"
            android:textSize="@dimen/text_size_medium" />

        <cn.keziqin.studychinese.view.ClearEditText
            android:id="@+id/login_password_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/keyline_1"
            android:layout_marginRight="@dimen/keyline_1"
            android:layout_marginTop="@dimen/keyline_1"
            android:background="@drawable/background_round_edittext"
            android:hint="@string/login_password_hint"
            android:inputType="textPassword"
            android:padding="@dimen/keyline_1"
            android:textSize="@dimen/text_size_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/keyline_1">

            <CheckBox
                android:id="@+id/login_remember_password_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medium_plus"
                android:layout_marginLeft="4dp"
                android:text="记住密码"/>

        </LinearLayout>

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/keyline_1"
            android:background="@drawable/selector_button_background"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/tv_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPrimary1"
            android:text="还没有账号那就注册一个吧~"/>


    </LinearLayout>


</layout>

